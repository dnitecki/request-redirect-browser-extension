{
  "manifest_version": 3,
  "name": "Request Redirect",
  "version": "0.1.0",
  "description": "Redirect Requests with this extension",
  "action": {
    "default_popup": "index.html",
    "default_title": "Request Redirect",
    "default_icon": {
      "128": "rr-icon-128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"]
    }
  ],
  "permissions": ["storage", "scripting"],
  "icons": {
    "128": "rr-icon-128.png"
  }
}
